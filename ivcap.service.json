{
  "$schema": "urn:ivcap:schema:service.2",
  "id": "#SERVICE_ID#",
  "name": "llamaIndex-agent-runner",
  "description": "Executes queries or chats with LlamaIndex agents.",
  "parameters": [],
  "policy": "urn:ivcap:policy:ivcap.open.service",
  "controller-schema": "urn:ivcap:schema.service.rest.1",
  "controller": {
    "$schema": "urn:ivcap:schema.service.rest.1",
    "image": "#DOCKER_IMG#",
    "port": 8090,
    "command": [
      "python",
      "/app/service.py"
